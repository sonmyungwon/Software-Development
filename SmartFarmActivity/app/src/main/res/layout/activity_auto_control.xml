        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
