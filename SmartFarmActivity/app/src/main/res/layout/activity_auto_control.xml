        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/minus_btn"
        app:layout_constraintBottom_toBottomOf="@+id/temp_minus_btn"
        app:layout_constraintEnd_toEndOf="@+id/temp_minus_btn"
        app:layout_constraintTop_toTopOf="@+id/temp_minus_btn"
        app:layout_constraintStart_toStartOf="@+id/temp_minus_btn"/>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="235dp"
        android:layout_height="43dp"
        android:layout_marginBottom="104dp"
        android:background="#00ff0000"
        android:text="save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/illumText"
        app:layout_constraintVertical_bias="0.949" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:src="@drawable/login_btn"
        app:layout_constraintBottom_toBottomOf="@+id/save_btn"
        app:layout_constraintEnd_toEndOf="@+id/save_btn"
        app:layout_constraintStart_toStartOf="@+id/save_btn"
        app:layout_constraintTop_toTopOf="@+id/save_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
