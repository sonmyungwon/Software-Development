        android:text="조도 설정 : "
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lux"
        app:layout_constraintBottom_toBottomOf="@id/textView18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView18"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/data_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="state"
        android:text="0"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/textView31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView31"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/illum_plus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="+"
        android:background="#00ff0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toEndOf="@+id/illumText"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plus_btn"
        app:layout_constraintBottom_toBottomOf="@+id/illum_plus_btn"
        app:layout_constraintEnd_toEndOf="@+id/illum_plus_btn"
        app:layout_constraintTop_toTopOf="@+id/illum_plus_btn"
        app:layout_constraintStart_toStartOf="@+id/illum_plus_btn"/>

    <Button
        android:id="@+id/illum_minus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:text="-"
        android:background="#00ff0000"
        app:layout_constraintEnd_toStartOf="@+id/illumText"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/minus_btn"
        app:layout_constraintBottom_toBottomOf="@+id/illum_minus_btn"
        app:layout_constraintEnd_toEndOf="@+id/illum_minus_btn"
        app:layout_constraintTop_toTopOf="@+id/illum_minus_btn"
        app:layout_constraintStart_toStartOf="@+id/illum_minus_btn"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        app:layout_constraintBottom_toBottomOf="@+id/illumText"
        app:layout_constraintStart_toEndOf="@+id/illumText"
        app:layout_constraintTop_toTopOf="@+id/illumText"
        app:layout_constraintVertical_bias="0.545" />

    <TextView
        android:id="@+id/illumText"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        app:layout_constraintBottom_toBottomOf="@+id/humidText"
        app:layout_constraintStart_toEndOf="@+id/humidText"
        app:layout_constraintTop_toTopOf="@+id/humidText"
        app:layout_constraintVertical_bias="0.235" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mV"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView19"
        app:layout_constraintVertical_bias="0.362" />

    <TextView
        android:id="@+id/data_soil_humi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="state"
        android:text="0"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/textView30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView30"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/humid_minus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:text="-"
        android:background="#00ff0000"
        app:layout_constraintEnd_toStartOf="@+id/humidText"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/minus_btn"
        app:layout_constraintBottom_toBottomOf="@+id/humid_minus_btn"
        app:layout_constraintEnd_toEndOf="@+id/humid_minus_btn"
