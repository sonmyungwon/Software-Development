<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/plantBtn"
        android:layout_width="203dp"
        android:layout_height="42dp"
        android:hint="plant"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="117dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="텃밭 환경 설정"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="품종 : "
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="129dp" />

    <EditText
        android:id="@+id/nicknameBtn"
        android:layout_width="203dp"
        android:layout_height="42dp"
        android:hint="nickname"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물의 닉네임 : "
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="191dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="심은 날짜 : "
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="266dp" />

    <ImageView
        android:id="@+id/dateBtn"
        android:layout_width="205dp"
        android:layout_height="42dp"
        android:src="@drawable/login_btn"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="255dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜를 선택해 주세요"
        app:layout_constraintBottom_toBottomOf="@+id/dateBtn"
        app:layout_constraintEnd_toEndOf="@+id/dateBtn"
        app:layout_constraintStart_toStartOf="@+id/dateBtn"
        app:layout_constraintTop_toTopOf="@+id/dateBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>